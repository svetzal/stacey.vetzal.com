---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  imageAlt?: string;
}

const { title, description, image, imageAlt } = Astro.props;
const siteTitle = 'Stacey on Software';
const pageTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const metaDescription = description || "Stacey Vetzal's aggregated writing blog";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
    {image && <meta property="og:image" content={image} />}
    {imageAlt && <meta property="og:image:alt" content={imageAlt} />}
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={siteTitle}
      href="/rss.xml"
    />
  </head>
  <body>
    <Header />
    <main class="max-w-container mx-auto px-4 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
