---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  function toKebabCase(str: string): string {
    return str.toLowerCase().replace(/\s+/g, '-');
  }

  const posts = await getCollection('posts', ({ data }) => data.published);

  const tagMap = new Map<string, { originalName: string; posts: typeof posts }>();

  for (const post of posts) {
    for (const tag of post.data.tags) {
      const kebab = toKebabCase(tag);
      if (!tagMap.has(kebab)) {
        tagMap.set(kebab, { originalName: tag, posts: [] });
      }
      tagMap.get(kebab)!.posts.push(post);
    }
  }

  return [...tagMap.entries()].map(([kebab, { originalName, posts: tagPosts }]) => ({
    params: { tag: kebab },
    props: {
      tagName: originalName,
      posts: tagPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()),
    },
  }));
}

const { tagName, posts } = Astro.props;

function postSlug(id: string): string {
  return `/${id}/`;
}

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={`${tagName} | Stacey on Software`}>
  <h1 class="text-2xl font-bold mb-6">{tagName}</h1>
  <ul class="list-none pl-0">
    {posts.map((post) => (
      <li class="mb-6">
        <h2 class="text-xl font-bold mt-0 mb-1">
          <a href={postSlug(post.id)} class="text-primary no-underline hover:underline">
            {post.data.title}
          </a>
        </h2>
        <time class="text-sm text-gray-500" datetime={post.data.date.toISOString()}>
          {formatDate(post.data.date)}
        </time>
        {post.data.description && (
          <p class="mt-2 mb-0 text-gray-700">{post.data.description}</p>
        )}
      </li>
    ))}
  </ul>
</BaseLayout>
